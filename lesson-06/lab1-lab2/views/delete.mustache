{{>header}} 
<div class="container">
    <div class="py-2 text-center"></div>
    <h1>{{title}}</h1>
</div>

<div class="container">
    <div class="text-center mb-4">
        <form class="card" method="POST" action="{{route_url}}/delete/{{data.id}}" enctype="application/x-www-form-urlencoded">
            <p class="card-text">Name: {{data.name}}</p>
            <p class="card-text">Price: {{data.price}}</p>
            <p class="card-text">Description: {{data.desc}}</p> 
            <p>
                <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Delete"/>
                <a href="{{route_url}}/" class="btn btn-secondary">Reset</a>
            </p>  
        </form>   
    </div>
</div>
{{>footer}}